<h1>Editar producto <%= menu.titulo ?? '' %> </h1>
<form action="/products/<%= menu.id ?? '' %>?_method=PUT" method="POST">
    <input type="text"
        name="titulo" 
        placeholder="Titulo"
        value="<%= menu.titulo %> ">

    <input type="text"
        name="moneda" 
        placeholder="Moneda"
        value="<%= menu.moneda %> ">

    <input type="text"
        name="precio" 
        placeholder="Precio"
        value="<%= menu.precio %> ">

    <input type="text"
        name="descripcion" 
        placeholder="Descripcion"
        value="<%= menu.descripcion%> ">

    <input type="submit" value="Editar">
</form>